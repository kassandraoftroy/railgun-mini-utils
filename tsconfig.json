{
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "lib": ["ES2022", "DOM"],
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "outDir": "dist",
    "rootDir": "src",
    "types": ["node"],
    "typeRoots": ["src/types", "./node_modules/@types"]
  },
  "include": ["src"]
}
